<div class="row">
	<div class="col-md-8">
		<h1><%= @rating.severity %>-Rated</h1>
		<% @rating.topics.each do |topic| %>
			<div>
				Topic: <%= link_to topic.name, topic %>
			</div>
		<% end %>
		<% @rating.posts.each do |post| %>
			<div>
				Post: <%= link_to post.title, topic_post_path(post.topic, post) %>
			</div>
		<% end %>
	</div>
</div>